<html lang="en">
    
    <head>
        
        <meta charset="utf-8">
        
        <title>Web Dev Summer Task</title>
    </head>
    
     <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    
    
    <body style="background-image: url(http://www.bentleysofyork.com/images/comp_keyboard_gs.jpg); background-repeat:no-repeat; background-size:100% 100%; margin-bottom: 50px;">
        
        
        <nav class="navbar navbar-expand-sm bg-light navbar-light" >
            
            <div class="mx-auto">
                
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a href="/home">Home</a>
                    </li>
                </ul>
                
            </div>
            
            <ul class="navbar-nav mx-auto">
                
                <li class="nav-item active">
                    <a href="/account">Account</a>
                </li>
                
            </ul>
            <ul class="navbar-nav mx-auto">
                <li class="nav-item active">
                    <a href="/logout">Logout</a>
                </li>
            </ul>
            
        </nav>
        
        
        <div class="container">
            
            <div class="jumbotron" style="margin-top:0px;">
                <center><h1>Web Dev Summer Task</h1></center>
            </div>
            
            <div class="" style="background:transparent;">
                
                <h3>Uploaded Files:</h3>
                
                <ul>
                <% upload_details.forEach(function(file){ %>
                    <li> <a href="/task1/<%= file.file_name %>"> <%= file.file_name %> </a> <label>Grade: <%= file.grade %>. Remarks: <%= file.remarks %></label> 
                        <br>
                        <form action="/grade/task1" method="POST">
                            <input type="hidden" value="<%= file.file_name %>" name="username_given">
                            <label>Grade:</label>
                            <select name="grade_given">
                                <option value="S">S</option>
                                <option value="A">A</option>
                                <option value="B">B</option>
                                <option value="C">C</option>
                                <option value="N">N</option>
                            </select>
                            <br>
                            <label>Remarks:</label>
                            <input type="text" name="remarks"/>
                            <input type="submit" value="Submit"/>
                        </form>
                    </li>
                <% }); %>
                </ul>
                
            </div>
        </div>
        
        
        
        
    </body>
    
    
</html>s